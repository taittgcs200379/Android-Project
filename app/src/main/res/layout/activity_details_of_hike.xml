<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsOfHike">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="DETAILS" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TableRow>
                <TextView
                    android:text="Name of hike:"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/detailName"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text=" .............."
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>

                <TextView
                    android:text="Destination:"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/detailDestination"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text=" .............."
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Date of hike:"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/detailDate"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text=" .............."
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Length of hike:"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/detailLength"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text=" .............."
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Level of hike:"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/detailLevel"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text=" .............."
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Parking choice:"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/detailChoice"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text=" .............."
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Description:"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/detailDescription"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:text=" .............."
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="535dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="311dp">

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>